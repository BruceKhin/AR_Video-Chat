<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_login_activity"
    style="@style/MatchParent"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding_start">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_logo"
        android:layout_gravity="center_horizontal"/>
    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/text_splash_app_title"
        style="@style/SplashAppTitleStyle"
        android:text="Video Chat With Annotations"/>

    <EditText
        android:id="@+id/user_name"
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_top"
        android:layout_marginTop="20dp"
        android:hint="@string/hint_user_name"
        android:textSize="16sp"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/chat_room_name"
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_top"
        android:hint="@string/hint_user_password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="15sp"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:layout_weight="5"/>
    </LinearLayout>
</LinearLayout>